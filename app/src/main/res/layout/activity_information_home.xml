<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:livebutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_greenA400"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.alz.doyousmartinfootball.InformationHome">

    <ru.katso.livebutton.LiveButton
        android:id="@+id/btnCompetitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="  Competitions"
        android:textAlignment="center"
        android:textSize="6pt"
        livebutton:backgroundColor="@color/md_green300"
        livebutton:shadowColor="@color/material_green900" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480sp"
        android:layout_below="@id/btnCompetitions"
        android:layout_marginTop="10dp"
        android:background="@color/material_green50">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_black"
            android:popupBackground="@color/material_green200" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/spinner"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:text="  OK"
            android:textAlignment="center"
            android:textSize="6pt"
            livebutton:backgroundColor="@color/material_green200"
            livebutton:shadowColor="@color/material_green800" />

        <TextView
            android:id="@+id/txtData"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnOK"
            android:textColor="@color/material_black"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp" />
    </RelativeLayout>


</RelativeLayout>
