<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:livebutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_greenA400"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="com.android.alz.doyousmartinfootball.InformationHome"
    >

    <ru.katso.livebutton.LiveButton
        android:id="@+id/btnCompetitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="  Competitions"
        android:textAlignment="center"
        android:textSize="6pt"
        livebutton:backgroundColor="@color/md_green300"
        livebutton:shadowColor="@color/material_green900" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnCompetitions"
        android:layout_marginTop="10dp"
        android:background="@color/md_green800"
        android:foregroundTint="@color/md_black">

        <ListView
            android:id="@+id/ViewListResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>
